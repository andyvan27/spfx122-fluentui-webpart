{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "SPFx Heft Start",
      "type": "shell",
      "command": "npm start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": [
          {
            "regexp": ".*",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting incremental build",
          "endsPattern": "Finished"
        }
      }
    },
    {
      "label": "SPFx Heft Stop",
      "type": "shell",
      "command": "npm run stop",
      "problemMatcher": []
    }
  ]
}